extends layout

append styles
    link(href="css/notFoundPage.css", rel="stylesheet")

block body
    - console.log("404 body 태그 읽기 완료");
    .no-data-icon
        +icon("warning-sign")
        br
        .explain Not Found Page
        br

        span(class='explain-sub') Go to Polaris Office after
        #time-set 5
        span(class='explain-sub') seconds.

block scripts
    - console.log("404 script 태그 읽기 완료");
    script.

        let time = 5;
        let env = '#{env}' || "dev";

        setInterval(function () {
            --time
            if (time >= 0) {
                document.getElementById("time-set").innerText(time);
                if (time === 0) {
                    location.replace(appProperties().domain(env).mainHost)
                }
            }
        }, 1000);


